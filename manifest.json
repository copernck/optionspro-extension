{
  "manifest_version": 3,
  "name": "OptionsPro Strategy Analyzer",
  "version": "1.0.0",
  "description": "Professional options strategy analyzer with educational tools for stock options traders",
  "author": "Coper nck",
  "homepage_url": "https://github.com/copernck/optionspro-extension",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "OptionsPro",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "optionspro@extension.com",
      "strict_min_version": "100.0"
    }
  }
}
